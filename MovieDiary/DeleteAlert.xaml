<Window x:Class="MovieDiary.DeleteAlert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieDiary"
        mc:Ignorable="d"
        Title="경고" Height="200" Width="300">
    <Grid >
        <StackPanel Orientation="Vertical">
            <Label Content="내 책장에서 영화가 완전히 삭제됩니다." HorizontalAlignment="Center" Margin="0 40 0 -10" FontSize="14"/>
            <Label Content="계속 하시겠습니까?" HorizontalAlignment="Center" FontSize="14"/>
            <Button x:Name="yes_button" Content="예(삭제)" Width="70" Height="30" HorizontalAlignment="Left" Margin="40 20 0 0" Background="Red" FontWeight="Bold" Foreground="White" Click="YesButton_Click"/>
            <Button x:Name="no_button" Content="아니요" Width="70" Height="30" HorizontalAlignment="Right" Margin="0,-30,40,0" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
