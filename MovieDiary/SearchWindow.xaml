<Window x:Class="MovieDiary.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieDiary"
        mc:Ignorable="d"
        Title="SearchWindow" Height="650" Width="634.424" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" Height="620" VerticalAlignment="Top" Width="624" Margin="0,-17,0,0">
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="30" Margin="30,49,0,0" Stroke="Black" VerticalAlignment="Top" Width="562"/>
        <Label Content="영화 제목" HorizontalAlignment="Left" Margin="40,51,0,0" VerticalAlignment="Top" Height="30" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="Movie_searchName" HorizontalAlignment="Left" Height="29" Margin="121,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="398" FontSize="16" />
        <Button Content="검색" HorizontalAlignment="Left" Margin="517,50,0,0" VerticalAlignment="Top" Width="75" Height="29" Background="#FF2A8AD6" FontSize="14" FontWeight="Bold" Click="SearchButton_Click"/>
        <Button Content="내 서재에 추가" HorizontalAlignment="Left" Margin="469,589,0,0" VerticalAlignment="Top" Width="119" Background="#FF4079C2" Height="23" Click="AddButton_Click"/>
        <ListBox x:Name="myContact" HorizontalAlignment="Left" Height="482" Margin="30,94,0,0" VerticalAlignment="Top" Width="562" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
    </Grid>
</Window>
